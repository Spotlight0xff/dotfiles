!! Xft Font settings
Xft.autohint: 0
Xft.antialias: 1
Xft.hinting: true
Xft.hintstyle: hintslight
Xft.dpi: 96
Xft.rga: rgb
Xft.lcdfilter: lcddefault

!! URxvt settings
URxvt.saveLines: 9000
URxvt.scrollBar: false
URxvt.foreground: white
URxvt.secondaryScroll: true
!URxvt.font: xft:Roboto Mono for Powerline:pixelsize=13
URxvt*font:            xft:Liberation Mono for Powerline:size=10
URxvt*boldFont:        xft:Liberation Mono for Powerline:bold:size=10
URxvt*italicFont:      xft:Liberation Mono for Powerline:italic:autohint=true:size=10
URxvt*boldItalicFont:  xft:Liberation Mono for Powerline:bold:italic:autohint=true:size=10
! Decrease the letter space by one pixel
URxvt*letterSpace: -1
URxvt.perl-ext-common: default,clipboard,url-select
URxvt*inheritPixmap: true 
URxvt*shading: 20
URxvt*termName: rxvt-unicode
URxvt.depth: 32
URxvt*background: [50]#000000
URxvt.cursorUnderline: 1
URxvt.color4:           RoyalBlue
! open URLs w/o mouse
URxvt.keysym.C-i: perl:url-select:select_next
URxvt.url-select.launcher: /usr/bin/chromium
URxvt.url-select.underline: true
! copy paste
URxvt.iso14755: False
URxvt.keysym.M-C: perl:clipboard:copy
URxvt.keysym.M-V: perl:clipboard:paste
URxvt.keysym.Control-Up: \033[1;5A
URxvt.keysym.Control-Down: \033[1;5B
URxvt.keysym.Control-Left: \033[1;5D
URxvt.keysym.Control-Right: \033[1;5C


!! dzen2
dzen2.font: Liberation Mono for Powerline:size=14

!! rofi
rofi.bg: black
rofi.bw: 0
rofi.fg: white
rofi.opacity: 80
rofi.separator-style: solid
rofi.hide-scrollbar: true
rofi.bc: black
